---
import { Image } from "astro:assets";
import downArrowSvg from "../../assets/images/icons/down-arrow.svg";
import "./index.scss";

type Props = {
  style?: astroHTML.JSX.StyleObject;
  excludeScrollIndicator?: boolean;
};

const { style, excludeScrollIndicator = false } = Astro.props;
---

<div class="page-slide" style={style}>
  <slot />
  {
    !excludeScrollIndicator && (
      <div class="scroll-indicator">
        <Image src={downArrowSvg} alt="scroll" />
      </div>
    )
  }
</div>

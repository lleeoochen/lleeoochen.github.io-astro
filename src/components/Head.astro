---
interface Props {
  title: string;
  includeJquery?: boolean;
}

const { title, includeJquery = false } = Astro.props;
---

<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Wei Tung Chen's personal website." />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <meta
    property="og:image"
    content="https://weitungchen.com/assets/images/uw.jpg"
  />

  <title>{title}</title>

  <!-- Tab Icon -->
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

  <link
    href="https://fonts.googleapis.com/css?family=Quicksand&display=swap"
    rel="stylesheet"
  />

  {
    includeJquery && (
      <script is:inline src="https://code.jquery.com/jquery-3.7.0.min.js" />
    )
  }
</head>

---
import HomeLayout from "../layouts/HomeLayout/index.astro";
import signatureSvg from "../assets/images/signature.svg?raw";
import "./index.scss";
---

<HomeLayout title="Wei Tung Chen | Home">
  <div class="signature">
    <Fragment set:html={signatureSvg} alt={"signature"} />
  </div>
</HomeLayout>

<script>
  import anime from "animejs";
  anime
    .timeline({
      easing: "easeInOutSine",
      duration: 1000,
      loop: false,
    })
    .add(
      {
        targets: ".signature path",
        fill: "#ffffff",
        stroke: "#ffffff",
        opacity: 1,
        filter: "drop-shadow(0px 3px 2px rgba(0, 0, 0, .7))",
      },
      0
    );

  anime({
    targets: ".signature path",
    strokeDashoffset: [anime.setDashoffset, 0],
    easing: "easeInOutSine",
    duration: 1000,
    delay: function (el, i) {
      return i * 150;
    },
    loop: false,
  });
</script>

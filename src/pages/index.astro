---
import Layout from "../layouts/DefaultLayout/index.astro";
import signatureSvg from "../assets/images/signature.svg?raw";
import "./index.scss";
---

<Layout title="Wei Tung Chen | Home">
  <div class="signature">
    <Fragment set:html={signatureSvg} alt={"signature"} />
  </div>
</Layout>

<script>
  import anime from "animejs";
  anime
    .timeline({
      easing: "easeInOutSine",
      duration: 3000,
      loop: false,
    })
    .add(
      {
        targets: ".signature path",
        fill: "#ffffff",
        stroke: "#ffffff",
        filter: "drop-shadow(0px 3px 2px rgba(0, 0, 0, .7))",
      },
      0
    );
</script>

---
import HomeLayout from "../layouts/HomeLayout/index.astro";
import Signature from "../components/Signature/index.astro";
import PageSlide from "../components/PageSlide/index.astro";
import "./index.scss";
---

<HomeLayout title="Home | Wei Tung Chen" includeJquery>
  <div class="content">
    <PageSlide style={{ backgroundColor: "transparent" }}>
      <Signature />
    </PageSlide>

    <PageSlide style={{ backgroundColor: "#102737eb" }}>
      <h1>A little bit about myself</h1>
      <p>I was born</p>
      <p>I live</p>
      <p>I code website and kick ass</p>
    </PageSlide>

    <PageSlide style={{ backgroundColor: "#7f542beb" }}>
      <h1>A little bit about my music talent</h1>
      <p>I was born</p>
      <p>I live</p>
      <p>I play cello and go classical</p>
    </PageSlide>

    <PageSlide style={{ backgroundColor: "#1d3719eb" }} excludeScrollIndicator>
      <h1>A little bit about my programming talent</h1>
      <p>I was born</p>
      <p>I live</p>
      <p>I code frontend and center the divs</p>
    </PageSlide>
  </div>
</HomeLayout>

<script is:inline>
  $(".scroll-indicator").on("click", function (e) {
    e.preventDefault();
    this.parentElement.nextSibling?.scrollIntoView({ behavior: "smooth" });
  });
</script>

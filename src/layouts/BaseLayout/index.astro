---
import Foot from "../../components/Foot.astro";
import Head from "../../components/Head.astro";
import Menu from "../../components/Menu/index.astro";
import "./index.scss";

interface Props {
  title: string;
  includeMenu?: boolean;
}

const { title, includeMenu = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} />

  <body>
    <div id="background"></div>

    {includeMenu && <Menu />}
    <slot />

    <Foot />
  </body>
</html>

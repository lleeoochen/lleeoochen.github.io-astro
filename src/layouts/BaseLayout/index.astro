---
import Foot from "../../components/Foot.astro";
import Head from "../../components/Head.astro";
import Menu from "../../components/Menu/index.astro";
import "../../assets/styles/typography.scss";
import "./index.scss";

export type Props = {
  title: string;
  includeJquery?: boolean;
  includeMenu?: boolean;
};

const { title, includeMenu = false, includeJquery } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head title={title} includeJquery={includeJquery} />

  <body>
    <div id="background"></div>

    {includeMenu && <Menu />}
    <slot />

    <Foot />
  </body>
</html>
